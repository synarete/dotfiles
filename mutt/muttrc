# SMTP
set smtp_url = "smtp://synarete@smtp.gmail.com:587/"
set smtp_pass = $imap_pass
set ssl_force_tls = yes
set ssl_starttls = yes

# Compositions
set editor = "vim"
set edit_headers = yes
set charset = "UTF-8"
unset use_domain
set realname = "XXXXXXX YYYYYY"
set from = "synarete@xxxxxxxx"
